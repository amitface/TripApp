<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hackerearth.ixicode.tripapp.Fragments.TrendingFragment">

    <LinearLayout
        android:id="@+id/layoutTrending"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:text="Trending"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:text="Flights"
                android:textSize="14sp"
                android:gravity="center"
                android:padding="2dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="14sp"
                android:text="Budget Flights"
                android:padding="2dp"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/layoutTrending"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerTrending1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight=".5"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerTrending2"
            android:layout_width="0dp"
            android:layout_margin="2dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"/>
    </LinearLayout>


</RelativeLayout>
